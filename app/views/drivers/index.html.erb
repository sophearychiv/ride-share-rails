<main class="list-all">
    <div>
        <h1>Ooobur Drivers</h1>
         <p class="flash">
            <%= flash[:success] if flash[:success] %>
            <%= flash[:error] if flash[:error] %>
        </p>
    </div>
    <table id="index-table">
        <tr>
          <th class="header">Name</th>
          <th class="header">Image</th>
        </tr>
        <% @drivers.each do |driver| %>
        <tr>
            <th><%= link_to driver.name, driver_path(driver) %></th>
            <th><img src="https://picsum.photos/100/100"></th>
        </tr>
        <% end %>
    </table>
</main>