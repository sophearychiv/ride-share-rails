<%= form_with model: @trip, class: "edit-trip" do |f| %>
<p> Edit the trip here: </p>

  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :cost %>
  <%= f.text_field :cost %>

  <%= f.label :rating %>
  <%= f.text_field :rating %>

  <%= f.label :passenger %>
  <%# <%= f.text_field :passenger_id %> 
  <%= f.select :passenger_id, Passenger.all.map {|passenger| [passenger.name, passenger.id]}  %>
  <%# <%= f.select :passenger_id, Passenger.all.map {|pass| pass.id}  %> 

  <%= f.label :driver %>
  <%# <%= f.text_field :driver_id %>
  <%= f.select :driver_id, Driver.all.map {|driver| [driver.name, driver.id]} %> 
  <%# <%= f.select :driver_id, Driver.all.map {|driver| driver.id} %> 

  <%= f.submit "Save Trip", class: "submit-btn" %>
<% end %>