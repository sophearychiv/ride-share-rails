<main class="list-all">
    <div class="h1-block">
        <h1>Passengers</h1>
         <p class="flash">
            <%= flash[:success] if flash[:success] %>
            <%= flash[:error] if flash[:error] %>
        </p>
    </div>
    <ul class="index-list">
        <li>
                <span class="header">Image</span>
                <span class="header">Name</span>
                <span class="header">Edit / Delete</span>
        </li>
        <% @passengers.each do |passenger|%>
        <li>
            <span><img src="http://placekitten.com/100/100"></span>
            <span><%= link_to passenger.name, passenger_path(passenger.id) %></span>
            <span><%= link_to "Edit", edit_passenger_path(passenger.id) %> / <%= link_to "Delete", passenger_path(passenger.id), method: :delete, data: {confirm: "Are you sure you'd like to delete this passenger?"} %> </span>
        </li>
        <% end %>
    </ul>
</main>
